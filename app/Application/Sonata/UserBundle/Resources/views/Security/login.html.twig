{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{#{ error|trans({}, 'FOSUserBundle') }#}
    	<font color="#FF0000">Erreur de connexion : mauvais login ou mot de passe.</font>
    </div>
{% endif %}
<div id="login">
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}&nbsp;</label>
    <input type="text" id="log" name="_username" value="{{ last_username }}" /><br/>

    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}&nbsp;</label>
    <input type="password" id="pwd" name="_password" /><br/>
<!-- 
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label><br/>
 -->
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
</div>
{% endblock fos_user_content %}
