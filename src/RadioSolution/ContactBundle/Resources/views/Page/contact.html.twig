{% if app.session.hasFlash('blogger-notice') %}
    <div class="blogger-notice">
        {{ app.session.flash('blogger-notice') }}
    </div>
{% endif %}
<div class="article">
<h1>{{ entity.name }}</h1>


<div class="" style="float:left; margin-right:15px;">
	{% if entity.getImage() %}
			{%media entity.getImage() ,'medium' %}
	{% endif %}
</div><p style="font-weight:bold;">{{ entity.introduction }}</p>
<br clear="all" />

<p>{{ entity.body|raw }}</p>
</div>

	<div class="googlemap">
		<iframe width="620" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.fr/maps?f=q&amp;source=s_q&amp;hl=fr&amp;geocode=&amp;q=19+rue+jeanne+d'arc,+nantes&amp;aq=&amp;sll=47.220282,-1.55735&amp;sspn=0.002547,0.006539&amp;ie=UTF8&amp;hq=&amp;hnear=19+Rue+Jeanne+d'Arc,+44000+Nantes,+Loire-Atlantique,+Pays+de+la+Loire&amp;t=m&amp;ll=47.220676,-1.557055&amp;spn=0.020403,0.053215&amp;z=14&amp;iwloc=A&amp;output=embed"></iframe>
	</div>

<br clear="all" />
	
    <form action="{{ path('Contact') }}" method="post" {{ form_enctype(form) }} id="contact-form">
        {{ form_errors(form) }}
		<fieldset>	
        {{ form_row(form.name) }}
        </fieldset>
		<fieldset>
        {{ form_row(form.email) }}
        </fieldset>
		<fieldset>
        {{ form_row(form.subject) }}
        </fieldset>
		<fieldset>
        {{ form_row(form.body) }}
		</fieldset>
		<fieldset>
        {{ form_rest(form) }}
        </fieldset>
        {% form_theme form 'EWZRecaptchaBundle:Form:ewz_recaptcha_widget.html.twig' %}

			{{ form_widget(form.recaptcha, { 'attr': {
			    'options' : {
			        'theme' : 'clean',
			    },
			} }) }}
		<button type="submit" class="button">ENVOYER</button>
    </form>
    </div></section>
